<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="net.scarlettsystems.android.FlexTextViewDemo"
	android:orientation="vertical">
	<net.scarlettsystems.android.widget.FlexTextView
		android:id="@+id/ftv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:ftv_text="Hello World!"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_margin="16dp">
		<TextView
			android:id="@+id/enable"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:text="Enabled"
			android:background="@color/colorPrimary"
			android:padding="16dp"
			android:textColor="@android:color/white"/>
		<TextView
			android:id="@+id/animation"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:text="Animations: On"
			android:background="@color/colorPrimary"
			android:padding="16dp"
			android:textColor="@android:color/white"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_margin="16dp">
		<TextView
			android:id="@+id/add"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:text="Add Text"
			android:background="@color/colorPrimary"
			android:padding="16dp"
			android:textColor="@android:color/white"/>
		<TextView
			android:id="@+id/remove"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:text="Remove Text"
			android:background="@color/colorPrimary"
			android:padding="16dp"
			android:textColor="@android:color/white"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_margin="16dp">
		<TextView
			android:id="@+id/collapsing"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:text="Collapsing"
			android:background="@color/colorPrimary"
			android:padding="16dp"
			android:textColor="@android:color/white"/>
		<TextView
			android:id="@+id/scrolling"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:text="Scrolling"
			android:background="@android:color/darker_gray"
			android:padding="16dp"
			android:textColor="@android:color/white"/>
		<TextView
			android:id="@+id/resizing"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:text="Resizing"
			android:background="@android:color/darker_gray"
			android:padding="16dp"
			android:textColor="@android:color/white"/>
	</LinearLayout>

</LinearLayout>
