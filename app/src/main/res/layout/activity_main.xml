<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="net.scarlettsystems.android.MainActivity"
	android:orientation="vertical"
	android:padding="16dp">

	<TextView
		android:id="@+id/button_evp"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:background="@color/colorPrimary"
		android:textColor="@android:color/white"
		android:text="EasyViewPager"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="16dp"/>

	<TextView
		android:id="@+id/button_erv"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:background="@color/colorPrimary"
		android:textColor="@android:color/white"
		android:text="EasyRecyclerView"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="16dp"/>

	<TextView
		android:id="@+id/button_ftv"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:background="@color/colorPrimary"
		android:textColor="@android:color/white"
		android:text="FlexTextView"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="16dp"/>

	<TextView
		android:id="@+id/button_npv"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:background="@color/colorPrimary"
		android:textColor="@android:color/white"
		android:text="NetPicView"/>

</LinearLayout>
